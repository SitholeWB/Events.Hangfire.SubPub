<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>2.1.1</Version>
    <Authors>Welcome Sithole</Authors>
    <PackageProjectUrl>https://github.com/SitholeWB/SubPub.Hangfire</PackageProjectUrl>
    <Copyright>https://raw.githubusercontent.com/SitholeWB/SubPub.Hangfire/main/LICENSE</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/SitholeWB/SubPub.Hangfire</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>hangfire;SubPub;EventSourcing;Topics;PublishSubscribe</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Lets you create applications with event publishers and subscribers.
Publishers communicate LOCALLY with subscribers by broadcasting events, Hangfire will process these events in the background via implemented handlers</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hangfire.Core" Version="1.6.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.1.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.1.0" />
  </ItemGroup>

</Project>
